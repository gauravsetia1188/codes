//Reference python plotting library -> https://plot.ly/python/network-graphs/
#include<bits/stdc++.h>
using namespace std;
int main() {
    
    int arr[100001];
    int n;
    cout<<"Enter the no of data points"<<endl;
    cin>>n;
    for(int i=0;i<n;i++) {
        cin>>arr[i];
    }
    
    vector <int> v[100001];
    
    for(int i=0;i<n-2;i++) {
        
        v[i].push_back(i+1);
        for(int k=i+2;k<n;k++) {
            int mark=0;
            for(int j=i+1;j<k;j++) {
                
                float value = (j-i);
                value/=(k-i);
                if(arr[j] >= (arr[i] + ((arr[k]-arr[i])*value) ) ) {
                    mark=1;
                    break;
                }
                
            }
            if(mark==0)
                v[i].push_back(k);
            else
             break;
        }
        
    }
    v[n-1].push_back(n);
    for(int i=0;i<n;i++) {
        for(int j=0;j<v[i].size();j++) {
            float value = arr[v[i][j]] - arr[i];
            value/=(v[i][j]-i);
            cout<<i+1<<"-> "<<v[i][j]+1<<" ";
            cout<<"value is "<<abs(atan(value))<<endl;
        }
    }
    return 0;
}
